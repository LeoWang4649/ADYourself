<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:background="@android:color/holo_blue_light"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="152dp"
        android:layout_marginRight="152dp"
        android:text="訂單明細"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_uohd_tomainpage"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_uohd_tomainpage"
        android:layout_width="0dp"
        android:layout_height="61dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="92dp"
        android:layout_marginRight="92dp"
        android:background="#00000000"
        app:layout_constraintEnd_toStartOf="@+id/textView8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar4"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="訂單編號:"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/UDetail_OrderID"
        app:layout_constraintEnd_toEndOf="@+id/textView18" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:text="訂購人:"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/UDetail_User"
        app:layout_constraintEnd_toEndOf="@+id/textView19" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="訂單價格:"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/UDetail_Price"
        app:layout_constraintEnd_toEndOf="@+id/textView261" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:text="看板編號:"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/UDetail_Board"
        app:layout_constraintEnd_toEndOf="@+id/textView261" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="廣告日期:"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/UDetail_Date"
        app:layout_constraintStart_toStartOf="@+id/textView20" />

    <TextView
        android:id="@+id/textView261"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:text="訂單完成狀態:"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/UDetail_Pending"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView251"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="廣告時段:"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/UDetail_Time"
        app:layout_constraintStart_toStartOf="@+id/textView21" />

    <TextView
        android:id="@+id/textView214"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="廣告內容:"
        android:textSize="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_checkAD2"
        app:layout_constraintStart_toStartOf="@+id/textView251" />

    <TextView
        android:id="@+id/UDetail_OrderID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/UDetail_User"
        app:layout_constraintStart_toStartOf="@+id/UDetail_User" />

    <TextView
        android:id="@+id/UDetail_User"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="27dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/UDetail_Price"
        app:layout_constraintEnd_toEndOf="@+id/UDetail_Price" />

    <TextView
        android:id="@+id/UDetail_Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="28dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/UDetail_Pending"
        app:layout_constraintStart_toStartOf="@+id/UDetail_Pending" />

    <TextView
        android:id="@+id/UDetail_Pending"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="26dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/UDetail_Board"
        app:layout_constraintEnd_toEndOf="@+id/UDetail_Board" />

    <TextView
        android:id="@+id/UDetail_Board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="328dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/textView20"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/UDetail_Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/UDetail_Board"
        app:layout_constraintTop_toBottomOf="@+id/UDetail_Board" />

    <TextView
        android:id="@+id/UDetail_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="17dp"
        android:text="TextView"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_checkAD2"
        app:layout_constraintStart_toStartOf="@+id/btn_checkAD2" />

    <Button
        android:id="@+id/btn_checkAD2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="73dp"
        android:background="@drawable/buttonshape"
        android:text="查看廣告內容"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/textView214"
        app:layout_constraintTop_toBottomOf="@+id/UDetail_Date" />


</androidx.constraintlayout.widget.ConstraintLayout>